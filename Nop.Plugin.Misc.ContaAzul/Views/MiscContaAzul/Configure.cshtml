@{
    Layout = "";
}
@model ConfigurationModel
@using Nop.Plugin.Misc.ContaAzul.Models;
@using Nop.Web.Framework;

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>É preciso ter um cadastro no Conta Azul para realizar a integração. </p>
                <p>Adicione seu login e senha da aplicação Conta Azul para prosseguir</p>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.email)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.senha)
                    </div>
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.senha)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.client_id)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.client_id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.client_secret)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.client_secret)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>            
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        @*<a href="https://api.contaazul.com/auth/authorize?redirect_uri=http://www.google.com&client_id=CFkrSgNEOYddgYvflcc39AydSJdDI950&scope=sales&state=123456" target="_blank" class="btn btn-primary float-right">
                            Gerar código
                        </a>*@
                        <a href="@Url.Action( "GerarCodigo", new { controller = "MiscContaAzul" } )" target="_blank" class="btn btn-primary float-right">
                            Gerar Código
                        </a>
                    </div>
                    <div class="col-md-9">
                        <a href="@Url.Action( "SincronizaProdutos", new { controller = "MiscContaAzul" } )" class="btn btn-primary float-right">
                            Sincronizar produtos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
